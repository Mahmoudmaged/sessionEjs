<%- include('shared/header')%>


    <div class="container my-5 p-5">

        <form action="/signup" method="POST">
            <% if (hashError) { %>
                <div class="my-2 alert alert-danger">
                    hash error
                </div>
                <% } %>
                    <div class="form-group">
                        <input value="<%= oldInputs.email %>" name="email" required placeholder="emil" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <% if (isExist) { %>
                        <div class="my-2 alert alert-danger">
                            in-valid email already exist
                        </div>
                        <% } %>


                            <% if (validationError.find(ele => ele.param == 'email')) { %>
                                <div class="my-2 alert alert-danger">
                                    in-valid email validation
                                </div>
                                <% } %>

                                    <div class="form-group">
                                        <input value="<%= oldInputs.password %>" name="password" required placeholder="password" type="password" class="form-control" id="exampleInputPassword1">
                                    </div>
                                    <% if (validationError.find(ele => ele.param == 'password')) { %>
                                        <div class="my-2 alert alert-danger">
                                            in-valid password validation
                                        </div>
                                        <% } %>

                                            <div class="form-group">
                                                <input value="<%= oldInputs.cPassword %>" name="cPassword" placeholder="re-password" required type="password" class="form-control" id="exampleInputPassword1">
                                            </div>
                                            <% if (validationError.find(ele => ele.param == 'cPassword')) { %>
                                                <div class="my-2 alert alert-danger">
                                                    in-valid cPassword validation
                                                </div>
                                                <% } %>

                                                    <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>



    <%- include("shared/footer") %>